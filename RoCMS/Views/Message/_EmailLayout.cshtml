@{
    var settingsService = DependencyResolver.Current.GetService<ISettingsService>();
    var rootUrl = settingsService.GetSettings<string>("RootUrl");
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>@TempData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <style>
        td {
            
        }
        h2 {
            
        }
    </style>
</head>
<body style="margin: 0; padding: 0;">

<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <td>
            <table align="center" border="0" cellpadding="0" cellspacing="0" width="600" style="border-collapse: collapse;">
                <tr>

                    <td align="center" bgcolor="#ffffff" style="padding: 10px 0 10px 0; color: #000000; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px;">


                        <h2 style="font-size: 24px; color: #000000; font-family: Arial, sans-serif; line-height: 35px;">@settingsService.GetSiteName()</h2>


                    </td>
                </tr>

                <tr>
                    <td bgcolor="#ffffff" style="padding: 40px 30px 40px 30px; color: #000000; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px;">
                         @RenderBody()
                    </td>
                </tr>


                <tr>
                    <td bgcolor="#ffffff" style="color: #000000; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px; padding: 30px 30px 30px 30px;">
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr>
                                <td width="75%" style="color: #000000; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px;">
                                    &copy; @settingsService.GetSiteName()<br />
                                    <a style="color: #000000;" href="@rootUrl"><font color="#000000">@rootUrl</font></a>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
</body>
</html>