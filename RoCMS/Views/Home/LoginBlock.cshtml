<form class="form-horizontal authorize">
    <h3>Авторизация на сайте</h3>
    <div class="form-group">
        <div class="col-xs-12">
            <input class="form-control login" type="text" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <input class="form-control pass" type="password" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <button class="sign-in button-grey" type="button">Войти на сайт</button>
        </div>
    </div>
    @Html.AntiForgeryToken()
</form>

